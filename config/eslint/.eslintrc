{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warning",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "useTabs": true,
                "tabWidth": 4
            }
        ],
        "indent": ["warning", 2]
    }
}