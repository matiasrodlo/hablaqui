{
  // Project name and basic information
  "name": "hablaqui-landing",  // Landing page project name
  "version": "1.0.0",  // Project version (semantic versioning)
  "description": "Landing page for Hablaqui Mental Health Marketplace and SaaS Platform",  // Project description
  "private": true,  // Prevents accidental publishing to npm

  // NPM scripts for project management
  "scripts": {
    "dev": "nuxt dev",  // Run landing page in development mode
    "build": "nuxt build",  // Build landing page for production
    "start": "nuxt start",  // Start the landing page server
    "generate": "nuxt generate",  // Generate static site
    "lint": "eslint .",  // Lint the codebase
    "format": "prettier --write ."  // Format the codebase
  },

  // Dependencies
  "dependencies": {
    "nuxt": "^3.7.4",  // Nuxt.js framework
    "vue": "^3.3.4",  // Vue.js framework
    "vue-router": "^4.2.4",  // Vue Router for navigation
    "pinia": "^2.1.6",  // State management
    "@nuxtjs/tailwindcss": "^6.8.0",  // Tailwind CSS integration
    "@nuxtjs/i18n": "^8.0.0",  // Internationalization
    "@nuxtjs/color-mode": "^3.3.2",  // Color mode support
    "@nuxtjs/supabase": "^1.1.3",  // Supabase integration
    "@pinia/nuxt": "^0.5.1"  // Pinia integration for Nuxt
  },

  // Development dependencies
  "devDependencies": {
    "@nuxtjs/eslint-config": "^12.0.0",  // ESLint configuration for Nuxt
    "@nuxtjs/eslint-module": "^4.0.0",  // ESLint module for Nuxt
    "eslint": "^8.47.0",  // Linting
    "prettier": "^3.0.2",  // Code formatting
    "postcss": "^8.4.28",  // PostCSS for CSS processing
    "autoprefixer": "^10.4.15",  // Autoprefixer for CSS
    "tailwindcss": "^3.3.3"  // Tailwind CSS
  }
}
