{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~~/*": [
                "./*"
            ],
            "@@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./components/**/*",
        "./layout/**/*",
        "./pages/**/*",
    ],
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}